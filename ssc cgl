        const weightageData = {
            labels: ['English Language (35%)', 'Mathematical Abilities (23%)', 'Reasoning (23%)', 'General Awareness (19%)'],
            datasets: [{
                label: 'Paper 1 Weightage',
                data: [35, 23, 23, 19],
                backgroundColor: ['#4338ca', '#6d28d9', '#7c3aed', '#a78bfa'],
                borderColor: '#ffffff',
                borderWidth: 2,
                hoverOffset: 4
            }]
        };
        const weightageConfig = {
            type: 'doughnut',
            data: weightageData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: { size: 12 },
                            color: '#334155',
                            boxWidth: 20,
                            padding: 20
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `${context.label}: ${context.raw}%`;
                            }
                        }
                    }
                }
            }
        };
        new Chart(document.getElementById('weightageChart'), weightageConfig);

        function populateDays(phaseKey, containerId) {
            const container = document.getElementById(containerId);
            const phase = studyData.phases[phaseKey];
            let content = '';
            for (let i = phase.start; i <= phase.end; i++) {
                content += `
                    <div class="day-card border border-slate-200 rounded-lg cursor-pointer hover:shadow-md transition-shadow duration-300">
                        <div class="p-3 bg-slate-100 rounded-t-lg">
                            <p class="font-semibold text-slate-700">Day ${i}</p>
                        </div>
                        <div class="day-details px-3">
                            <ul class="text-xs text-slate-600 list-disc list-inside space-y-1">
                                ${phase.details[i].split('. ').filter(Boolean).map(task => `<li>${task.trim()}</li>`).join('')}
                            </ul>
                        </div>
                    </div>`;
            }
            container.innerHTML = content;
        }

        populateDays('phase1', 'phase1-days');
        populateDays('phase2', 'phase2-days');
        populateDays('phase3', 'phase3-days');

        document.querySelectorAll('.day-card').forEach(card => {
            card.addEventListener('click', () => {
                card.classList.toggle('expanded');
            });
        });
        
        const tabNav = document.getElementById('tab-nav');
        const tabPanes = document.querySelectorAll('.tab-pane');
        tabNav.addEventListener('click', (e) => {
            if (e.target.classList.contains('tab-btn')) {
                const tabId = e.target.dataset.tab;
                
                tabNav.querySelectorAll('.tab-btn').forEach(btn => {
                    btn.classList.remove('tab-active');
                    btn.classList.add('tab-inactive');
                });
                e.target.classList.add('tab-active');
                e.target.classList.remove('tab-inactive');

                tabPanes.forEach(pane => {
                    if (pane.id === tabId) {
                        pane.classList.remove('hidden');
                        pane.classList.add('active');
                    } else {
                        pane.classList.add('hidden');
                        pane.classList.remove('active');
                    }
                });
            }
        });

        const subjectSelect = document.getElementById('subject-select');
        const topicDisplay = document.getElementById('topic-display');
        function updateTopicDisplay() {
            const selectedSubject = subjectSelect.value;
            const subjectData = studyData.topics[selectedSubject];
            let content = `<h3 class="text-xl font-bold text-indigo-700 mb-3">${subjectData.title}</h3><div class="space-y-3">`;
            subjectData.items.forEach(item => {
                content += `
                    <div class="p-4 bg-slate-100 rounded-lg">
                        <p class="font-semibold text-slate-800">${item.topic}</p>
                        <p class="text-sm text-slate-600 mt-1">${item.strategy}</p>
                    </div>`;
            });
            content += '</div>';
            topicDisplay.innerHTML = content;
        }
        subjectSelect.addEventListener('change', updateTopicDisplay);
        updateTopicDisplay();

        function downloadFile(filename, content, mimeType) {
            const element = document.createElement('a');
            element.setAttribute('href', `data:${mimeType};charset=utf-8,` + encodeURIComponent(content));
            element.setAttribute('download', filename);
            element.style.display = 'none';
            document.body.appendChild(element);
            element.click();
            document.body.removeChild(element);
        }

        document.getElementById('downloadTracker').addEventListener('click', () => {
            let csvContent = "Day,Date,Time Slot 1 (Topic),Time Slot 2 (Topic),Time Slot 3 (Topic),Tasks,Self-Rating (1-5),Completed\n";
            for (let i = 1; i <= 40; i++) {
                csvContent += `${i},,,,,,\n`;
            }
            downloadFile('SSC_CGL_40_Day_Tracker.csv', csvContent, 'text/csv');
        });

        document.getElementById('downloadFlashcards').addEventListener('click', () => {
            let textContent = `## High-Frequency Vocabulary Flashcards (Front | Back)\n\n`;
            textContent += `Ephemeral | Lasting for a very short time\n`;
            textContent += `Ubiquitous | Present, appearing, or found everywhere\n`;
            textContent += `Mellifluous | (of a voice or words) Sweet or musical; pleasant to hear\n`;
            textContent += `Pulchritudinous | Having great physical beauty\n`;
            textContent += `Idiosyncrasy | A mode of behavior or way of thought peculiar to an individual\n\n`;
            textContent += `## Essential Math Formulas (Front | Back)\n\n`;
            textContent += `Compound Interest | A = P(1 + r/n)^(nt)\n`;
            textContent += `Area of Trapezium | (1/2) * (sum of parallel sides) * height\n`;
            textContent += `Volume of Cone | (1/3) * œÄ * r^2 * h\n`;
            textContent += `Pythagorean Theorem | a^2 + b^2 = c^2\n`;
            textContent += `Profit Percentage | ((SP - CP) / CP) * 100\n`;
            downloadFile('SSC_CGL_Flashcards.txt', textContent, 'text/plain');
        });
    });
</script>

